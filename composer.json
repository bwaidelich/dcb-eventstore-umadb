{
  "name": "wwwision/dcb-eventstore-umadb",
  "description": "UmaDB adapter for the Dynamic Consistency Boundary implementation",
  "type": "package",
  "license": "MIT",
  "authors": [
    {
      "name": "Bastian Waidelich",
      "email": "b.waidelich@wwwision.de"
    }
  ],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/bwaidelich"
    },
    {
      "type": "paypal",
      "url": "https://www.paypal.me/bwaidelich"
    }
  ],
  "require": {
    "php": ">=8.4",
    "ext-umadb": "*",
    "webmozart/assert": "^1.11",
    "wwwision/dcb-eventstore": "^5",
    "psr/clock": "^1.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/phpstan": "^2",
    "squizlabs/php_codesniffer": "^4.0.x-dev",
    "phpunit/phpunit": "^12",
    "brianium/paratest": "^7",
    "testcontainers/testcontainers": "1.0.3",
    "symfony/http-client": "^7.3"
  },
  "autoload": {
    "psr-4": {
      "Wwwision\\DCBEventStoreUmaDb\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wwwision\\DCBEventStoreUmaDb\\Tests\\": "tests/",
      "Wwwision\\DCBEventStore\\Tests\\": "vendor/wwwision/dcb-eventstore/tests/"
    }
  },
  "scripts": {
    "test:phpstan": "phpstan",
    "test:cs": "phpcs --colors src",
    "test:cs:fix": "phpcbf --colors src",
    "test:integration": [
      "echo $DCB_TEST_DSN",
      "phpunit tests/Integration --exclude-group=parallel --exclude-group=feature_onlyLastEvent --exclude-group=feature_liveStream"
    ],
    "test:consistency": [
      "Wwwision\\DCBEventStoreUmaDb\\Tests\\Integration\\ConcurrencyTest::prepare",
      "paratest tests/Integration --group=parallel --functional --processes 20",
      "Wwwision\\DCBEventStoreUmaDb\\Tests\\Integration\\ConcurrencyTest::validateEvents",
      "Wwwision\\DCBEventStoreUmaDb\\Tests\\Integration\\ConcurrencyTest::cleanup"
    ],
    "test": [
      "@test:phpstan",
      "@test:cs",
      "@test:integration",
      "@test:consistency"
    ]
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
